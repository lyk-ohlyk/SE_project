<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course ID</th>
      <th>Course code</th>
      <th>Course name</th>
      <th>Course time</th>
      <th>Score</th>
      <th>Exam date</th>
      <th>Exam hour</th>
      <th>Exam place</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.course_code %></td>
        <td><%= course.course_name %></td>
        <td><%= course.course_time %></td>
        <td><%= course.score %></td>
        <td><%= course.exam_date %></td>
        <td><%= course.exam_hour %></td>
        <td><%= course.exam_place %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

